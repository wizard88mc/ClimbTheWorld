    <TextView
        android:id="@+id/color_click_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/choose_color"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    
    <TextView
        android:id="@+id/yellow_picker"
        android:layout_width="100dp" 
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/green_picker"
        android:layout_alignBottom="@+id/green_picker"
        android:layout_alignParentRight="true"
        android:background="@drawable/rectangle_shape"
        android:gravity="center"
        android:text="@string/yellow_time_slot"
        android:visibility="visible"
        android:onClick="pickColor"
		android:clickable="true" />

    <TextView
        android:id="@+id/red_picker"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/green_picker"
        android:layout_alignBottom="@+id/green_picker"
        android:layout_alignParentLeft="true"   
        android:background="@drawable/rectangle_shape"
        android:gravity="center"
        android:text="@string/red_time_slot"
        android:visibility="visible"
        android:onClick="pickColor"
		android:clickable="true" />

    <TextView
        android:id="@+id/green_picker"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/color_click_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_shape"
        android:clickable="true"
        android:gravity="center"
        android:onClick="pickColor"
        android:text="@string/green_time_slot"
        android:visibility="visible" />
    
</RelativeLayout>