<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"    
    xmlns:staggered="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:fillViewport="true"> 
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:background="#FFFFFF">
    
    <com.etsy.android.grid.StaggeredGridView
        android:id="@+id/alg_conf_gridview"
   	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/green_picker"
        android:background="#FFFFFF"
        android:gravity="center"
        android:stretchMode="columnWidth"        
        staggered:column_count="4"
        staggered:item_margin="1dp" 
        android:visibility="gone"/>
    
    <!--  <android.widget.GridView 
        android:id="@+id/alg_conf_gridview"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
    	android:gravity="center"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true" 
        android:numColumns="4"
   		android:stretchMode="columnWidth"
   		android:background="#FFFFFF"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:visibility="visible"/>   -->
 

    <TextView
        android:id="@+id/config_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_centerHorizontal="true"
        android:text="@string/lab_first_config"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="serif"/>

    <!-- <TextView
        android:id="@+id/choose_color_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_centerHorizontal="true"
        android:text="@string/choose_color"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="serif"
        android:visibility="gone"/>  -->
    
    
    <TextView
        android:id="@+id/yellow_picker"
        android:layout_width="100dp" 
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/green_picker"
        android:layout_alignBottom="@+id/green_picker"
        android:layout_alignParentRight="true"
        android:background="@drawable/rectangle_shape"
        android:gravity="center"
        android:text="@string/yellow_time_slot"
        android:onClick="selectAction"
		android:clickable="true" 
		android:visibility="gone"/>

    <TextView
        android:id="@+id/red_picker"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/green_picker"
        android:layout_alignBottom="@+id/green_picker"
        android:layout_alignParentLeft="true"   
        android:background="@drawable/rectangle_shape"
        android:gravity="center"
        android:text="@string/red_time_slot"
        android:onClick="selectAction"
		android:clickable="true" 
		android:visibility="gone"/>

    <TextView
        android:id="@+id/green_picker"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/config_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_shape"
        android:clickable="true"
        android:gravity="center"
        android:onClick="selectAction"
        android:text="@string/green_time_slot"
        android:visibility="gone"/>
    
    <Button
        android:id="@+id/btt_google_play_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btt_cancel_config"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"        
        android:drawableLeft="@drawable/ic_content_import_export"
        android:onClick="selectAction"
        style="@style/customBttStyle"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btt_cancel_config"
        style="@style/customBttStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btt_next_config"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_navigation_cancel"
        android:gravity="center"
        android:onClick="selectAction"
        android:text="@string/btt_cancel" />

    <Button
        android:id="@+id/btt_next_config"
        style="@style/customBttStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/config_text"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:drawableLeft="@drawable/ic_navigation_forward"
        android:gravity="center"
        android:onClick="selectAction"
        android:text="@string/btt_next" />
    
</RelativeLayout>
</ScrollView>