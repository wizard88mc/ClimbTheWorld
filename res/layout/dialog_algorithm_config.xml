<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/dialog_config_layout">
    
    <TextView
        android:id="@+id/dialog_config_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/lab_dialog_config"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="serif" />

    <Button
        android:id="@+id/dialog_config_btt_cancel"
        style="@style/customBttStyle"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dialog_config_btt_ok"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:onClick="selectAction"
        android:text="@string/btt_cancel_dialog_config"
        android:drawableTop="@drawable/ic_navigation_cancel" />

    <Button
        android:id="@+id/dialog_config_btt_ok"
        style="@style/customBttStyle"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_config_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/ic_action_accept"
        android:gravity="center"
        android:onClick="selectAction"
        android:text="@string/btt_ok" />
    
</RelativeLayout>