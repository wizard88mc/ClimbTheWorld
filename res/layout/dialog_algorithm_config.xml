<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialog_config_layout"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="24dp"
    android:background="@color/white">
    
    <!--  <TextView
       android:id="@+id/textTitle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       android:text="Welcome!"
       android:textColor="@color/black"
       android:textSize="20sp" />-->
    
    <TextView
       android:id="@+id/dialog_config_text"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentEnd="true"
       android:layout_marginBottom="10dp"
       android:text="@string/lab_dialog_config"
       android:textSize="16sp"
       android:textColor="#87000000"/>

    <Button
        android:id="@+id/dialog_config_btt_cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dialog_config_btt_ok"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dialog_config_btt_ok"
        android:background="@color/white"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:onClick="selectAction"
        android:paddingBottom="24dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:text="@string/btt_cancel_dialog_config"
        android:textAllCaps="true"
        android:textColor="@color/accent"
        android:textSize="16sp" />

    <Button
       android:id="@+id/dialog_config_btt_ok"
       style="?android:attr/borderlessButtonStyle"
       android:layout_width="125dp"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_below="@+id/dialog_config_text"
       android:background="@color/white"
       android:fontFamily="sans-serif-medium"
       android:gravity="end"
       android:paddingBottom="24dp"
       android:paddingTop="8dp"
       android:paddingRight="8dp"
       android:paddingEnd="8dp"
       android:paddingLeft="8dp"
       android:paddingStart="8dp"
       android:textAllCaps="true"
       android:onClick="selectAction"
       android:text="@string/btt_ok"
       android:textSize="16sp" 
       android:textColor="@color/accent" />
    
</RelativeLayout>