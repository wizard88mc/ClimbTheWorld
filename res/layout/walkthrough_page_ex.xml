<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/walkthroughRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Titolo"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layout_how_to" 
        android:visibility="gone">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textSize="40sp" 
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView1text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scegli la difficoltà" 
            android:gravity="center"
            android:textSize="20sp"            
            android:textColor="@color/white"
            android:paddingBottom="60dp"/>
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2"
            android:textSize="40sp"             
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView2text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scegli un edificio" 
            android:gravity="center"
            android:textSize="20sp" 
            android:textColor="@color/white"
            android:paddingBottom="60dp"/>
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3"
            android:textSize="40sp" 
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView3text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scegli la modalità di scalata" 
            android:textSize="20sp" 
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
         android:id="@+id/layout_steps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:weightSum="4"
        >

    <!--   <TextView
            android:id="@+id/textUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="TextView"
            android:textSize="20sp" 
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            
            />  -->  

        <ImageView
            android:id="@+id/imageDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/textDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="TextView"
            android:textSize="20sp" 
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

       <TableLayout
           android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center" >

            <TableRow
                android:id="@+id/tableRowBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </TableRow>

            <TableRow
                android:id="@+id/tableRowBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                 android:gravity="center" >
            </TableRow>

           
        </TableLayout>

    </LinearLayout>

</LinearLayout>