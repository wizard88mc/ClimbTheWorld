<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/black_overlay"

    >

    <!-- #33BBFFFF -->

    <LinearLayout
        android:id="@+id/main_trasparent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
            android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="40dp"
        > <!-- android:paddingTop="260dp" -->
        <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@android:color/transparent" />

        <RelativeLayout
            android:id="@+id/main_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

           

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="24dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textTitleOnborading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/onboarding_title_1"
                    android:textColor="@color/accent"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textOnborading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/black"
                    android:text="@string/onboarding_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end" >

                    <Button
                        android:id="@+id/buttonSkip"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:paddingBottom="24dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/onboarding_skip_btn"
                        android:textAllCaps="true"
                        android:textColor="@color/accent"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/buttonOk"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:minWidth="40dp"
                        android:paddingBottom="24dp"
                        android:paddingTop="8dp"
                        android:paddingLeft="12dp"
                        android:text="@string/onboarding_btn_1"
                        android:textAllCaps="true"
                        android:textColor="@color/accent"
                        android:textSize="14sp" />
 <!--                         android:paddingLeft="1dp"
                         -->
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>