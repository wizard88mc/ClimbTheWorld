<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/black_overlay">

    <!-- #33BBFFFF -->

    <LinearLayout
        android:id="@+id/main_trasparent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        > <!-- android:paddingTop="260dp" -->
        <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@android:color/transparent" />

        <RelativeLayout
            android:id="@+id/main_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/rect"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rectangle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rect"
                android:layout_alignLeft="@+id/rect"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textOnborading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Welcome \n Are you ready for climbing? \nClick on Mushrooms"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white" />

                <Button
                    android:id="@+id/buttonOk"
                    android:layout_width="286dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#0DC386"
                    android:text="Ok!!!!"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/tri_down"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/triangle_down" 
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>