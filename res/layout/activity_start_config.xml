<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"   
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:fillViewport="true" 
    android:background="@color/white" > 

	<RelativeLayout
   	 android:layout_width="fill_parent"
   	 android:layout_height="wrap_content" >

	<TextView
        android:id="@+id/config_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_centerHorizontal="true"
        android:text="@string/lab_first_config"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
		android:textSize="@dimen/card_medium_text"
        android:textColor="@color/card_text"/>

 <Button
        android:id="@+id/btt_google_play_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btt_cancel_config"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"        
        android:drawableLeft="@drawable/ic_content_import_export"
        android:onClick="selectAction"
        style="@style/btnStyleCard"
        android:textSize="@dimen/card_medium_text"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btt_cancel_config"
        style="@style/btnStyleCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btt_next_config"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_navigation_cancel"
        android:gravity="center"
        android:onClick="selectAction"
        android:text="@string/btt_cancel" 
        android:textSize="@dimen/card_medium_text"/>

    <Button
        android:id="@+id/btt_next_config"
        style="@style/btnStyleCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/config_text"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:drawableLeft="@drawable/ic_navigation_forward"
        android:gravity="center"
        android:onClick="selectAction"
        android:text="@string/btt_next" 
        android:textSize="@dimen/card_medium_text"/>
 
</RelativeLayout>
</ScrollView>