<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_endconfig"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:fillViewport="true" 
    android:background="@color/white" > 

<RelativeLayout
    android:id="@+id/lyt_endconfig"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

 <TextView
     android:id="@+id/endConfigLabel"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentRight="true"
     android:gravity="center"
     android:layout_marginTop="10dp"
     android:text="@string/lab_endconfig"
     android:textSize="@dimen/card_medium_text"
     android:textColor="@color/card_text" />

 <Button
     android:id="@+id/btt_endConfig"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     android:layout_alignParentRight="true"
     android:layout_marginBottom="37dp"
     android:drawableLeft="@drawable/ic_good"
     android:gravity="center" 
     android:text="@string/btt_ok"
     style="@style/btnStyleCard"
     android:textSize="@dimen/card_medium_text" />
 
</RelativeLayout>
</ScrollView>