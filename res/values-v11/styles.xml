<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="FullscreenTheme" parent="@style/Theme.AppCompat.Light"> <!--parent="android:Theme.NoTitleBar"  -->
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
             <item name="android:homeAsUpIndicator">@drawable/ic_action_previous_item</item>
        
        

    </style> <!-- 
     <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item> -->

<!-- android:Widget.Holo.Light.DarkActionBar -->
    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/black_overlay</item>
   <item name="android:titleTextStyle">@style/HoloTitleText</item>
</style>

<style name="HoloTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
</style>

</resources>
